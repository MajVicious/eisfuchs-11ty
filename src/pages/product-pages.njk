---
layout: layouts/home.njk
pagination:
    data: products.products
    size: 1
    alias: product
    addAllPagesToCollections: true
permalink: "produkte/{{ product.name | slugify }}/"
eleventyComputed:
  pageTitle: "{{ product.name }}"
  pageDescription: "{{ product.description }}"
---

{% set pageTitle = product.name %}
{% set pageDescription = product.description %}

<!-- Product Page Content -->
<main class="container mx-auto p-6 min-h-screen">
  <div class="flex flex-col md:flex-row">
    
    <!-- Left Column: Product Information -->
    <div class="md:flex-1 p-4">
      <h1 class="text-2xl font-bold mb-3">{{ product.name }}</h1>
      <p class="mb-3">{{ product.description }}</p>
      <p class="font-semibold">{{ product.price }}</p>
    </div>
    
    <!-- Right Column: Product Image -->
    <div class="md:flex-1 p-4">
      <img src="/img/{{ product.image }}" alt="{{ product.name }}" class="max-w-full h-auto rounded-md">
    </div>

  </div>
</main>